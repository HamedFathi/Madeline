{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "esnext"
        ],
        "declaration": false,
        "sourceMap": true,
        "removeComments": true,
        "importHelpers": true,
        "strict": true,
        "downlevelIteration": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true
    },
    "baseUrl": ".",
    "paths": {
        "@utils/*": [
            "utilities/*"
        ]
    },

    "exclude": [
        "node_modules",
        "wwwroot",
        "typings",
        "test",
        "dist"
    ]
}